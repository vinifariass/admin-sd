generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String    @default("NO_NAME")
  email         String    @unique(map: "user_email_idx")
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  tipo          Tipo      @default(MORADOR)
  createdAt     DateTime  @default(now()) @db.Timestamp(6)
  updatedAt     DateTime  @updatedAt

  moradores     Morador[] @relation("UserMoradores") // Um usuário pode ter múltiplos moradores

  @@map("users")
}

enum Tipo {
  ADMIN
  FUNCIONARIO
  MORADOR
}

enum TipoVeiculo {
  carro
  moto
}

enum TipoMorador {
  Proprietario
  Inquilino
}

model Parking {
  id          String      @id @default(uuid())
  nome        String
  cpf         String
  apartamento String
  placa       String
  cor         String
  modelo      String
  tipo        TipoVeiculo
  tipoMorador TipoMorador
  createdAt   DateTime @default(now())
}

model Morador {
  id          String    @id @default(uuid())
  nome        String
  cpf         String
  apartamento String
  usuarioId   String?   @db.Uuid
  usuario     User?     @relation("UserMoradores", fields: [usuarioId], references: [id])
  email       String?
  telefone    String?
  dataLocacao DateTime?
  dataSaida   DateTime?
  createdAt   DateTime  @default(now())

  Encomenda     Encomenda[]
  boletos       Boleto[]
  acessos       AcessoPortaria[]
  reservas      ReservaEspaco[]
}

model Encomenda {
  id             String       @id @default(uuid())
  numeroPedido   String       @unique
  moradorId      String
  morador        Morador      @relation(fields: [moradorId], references: [id])
  createdAt      DateTime     @default(now())
  dataEntrega    DateTime?
  status         StatusPedido @default(ENTREGUE)
  assinado       Boolean      @default(false)
  assinadoPor    String?
  dataAssinatura DateTime?

  @@map("encomendas")
}

enum StatusPedido {
  ENTREGUE
  DEVOLVIDO
}

model Funcionario {
  id             String             @id @default(uuid())
  nome           String
  cpf            String             @unique(map: "funcionario_cpf_idx")
  cargo          String
  salario        Float
  email          String?
  telefone       String?
  dataAdmissao   DateTime?
  dataDemissao   DateTime?
  endereco       String?
  departamento   String?
  status         StatusFuncionario? @default(ATIVO)
  foto           String?
  pis            String?
  rg             String?
  dataNascimento DateTime?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@map("funcionarios") // Nome da tabela no banco de dados
}

enum StatusFuncionario {
  ATIVO
  INATIVO
  AFASTADO
}

model Recibo {
  id             String   @id @default(uuid())
  nomeServico    String
  dataVencimento DateTime
  createdAt      DateTime @default(now())
}

model Agendamento {
  id          String   @id @default(uuid())
  nome        String
  apartamento String
  horario     String
  status      String
  tipo        String
  descricao   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Visitante {
  id             String   @id @default(uuid())
  nome           String
  cpf            String
  telefone       String?
  email          String?
  apartamento    String
  dataVisita     DateTime
  horario        String
  status         String   @default("AGENDADO")
  observacoes    String?
  autorizado     Boolean  @default(false)
  autorizadoPor  String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Notificacao {
  id          String   @id @default(uuid())
  titulo      String
  mensagem    String
  tipo        String   @default("INFO") // INFO, AVISO, URGENTE
  remetente   String
  destinatario String
  lida        Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gasto {
  id          String   @id @default(uuid())
  descricao   String
  valor       Float
  data        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Boleto {
  id              String   @id @default(uuid())
  numeroBoleto    String   @unique
  codigoBarras    String   @unique
  apartamento     String
  moradorId       String?
  morador         Morador? @relation(fields: [moradorId], references: [id])
  valor           Float
  dataVencimento  DateTime
  dataPagamento   DateTime?
  pago            Boolean  @default(false)
  observacoes     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ========== PORTARIA DIGITAL ==========
model AcessoPortaria {
  id              String        @id @default(uuid())
  tipo            TipoAcesso    @default(VISITANTE)
  nomeVisitante   String?
  cpfVisitante    String?
  telefone        String?
  apartamento     String
  moradorId       String?
  morador         Morador?      @relation(fields: [moradorId], references: [id])
  dataVisita      DateTime
  horaInicio      String
  horaFim         String?
  observacoes     String?
  status          StatusAcesso  @default(AGENDADO)
  qrCode          String?       @unique
  codigoAcesso    String?       @unique
  liberadoPor     String?
  dataLiberacao   DateTime?
  entradaEfetuada Boolean       @default(false)
  horaEntrada     DateTime?
  validoAte       DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("acesso_portaria")
}

enum TipoAcesso {
  VISITANTE
  PRESTADOR_SERVICO
  DELIVERY
  MORADOR
  FUNCIONARIO
}

enum StatusAcesso {
  AGENDADO
  APROVADO
  NEGADO
  EXPIRADO
  UTILIZADO
  CANCELADO
}

// ========== AGENDA DE ESPAÇOS COMUNS ==========
model EspacoComum {
  id           String            @id @default(uuid())
  nome         String
  descricao    String?
  capacidade   Int?
  preco        Float?            @default(0)
  tempoMinimo  Int?              @default(2) // horas
  tempoMaximo  Int?              @default(8) // horas
  ativo        Boolean           @default(true)
  observacoes  String?
  imagens      String[]          @default([])
  equipamentos String[]          @default([])
  regras       String[]          @default([])
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  
  reservas     ReservaEspaco[]

  @@map("espacos_comuns")
}

model ReservaEspaco {
  id              String         @id @default(uuid())
  espacoId        String
  espaco          EspacoComum    @relation(fields: [espacoId], references: [id])
  moradorId       String
  morador         Morador        @relation(fields: [moradorId], references: [id])
  dataReserva     DateTime
  horaInicio      String
  horaFim         String
  valorTotal      Float?         @default(0)
  status          StatusReserva  @default(PENDENTE)
  observacoes     String?
  convidados      Int?           @default(0)
  telefoneContato String?
  eventoPrincipal String?        // Aniversário, Casamento, etc.
  equipamentos    String[]       @default([])
  servicosExtras  String[]       @default([])
  aprovadoPor     String?
  dataAprovacao   DateTime?
  motivoCancelamento String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("reservas_espacos")
}

enum StatusReserva {
  PENDENTE
  APROVADA
  REJEITADA
  CANCELADA
  REALIZADA
}